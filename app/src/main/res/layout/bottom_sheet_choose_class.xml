<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/size_20"
    android:paddingVertical="@dimen/size_18"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tvDeleteClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_exit_red"
        android:drawablePadding="@dimen/size_28"
        android:text="Hapus Kelas"
        android:textColor="#666666"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tvCancelClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_52"
        android:layout_marginTop="@dimen/size_20"
        android:text="Batalkan"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/text_16" />

</LinearLayout>