<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/size_16"
    android:paddingVertical="@dimen/size_18"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tvEditComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_edit_red"
        android:drawablePadding="@dimen/size_24"
        android:text="Edit Komentar"
        android:textColor="#666666"
        android:textSize="@dimen/text_16" />


        <TextView
            android:id="@+id/tvDeleteComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/size_20"
            android:drawableLeft="@drawable/ic_delete_red"
            android:drawablePadding="@dimen/size_24"
            android:text="Hapus Komentar"
            android:textColor="#666666"
            android:textSize="@dimen/text_16" />



        <TextView
            android:id="@+id/tvCancelComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_48"
            android:layout_marginTop="@dimen/size_20"
            android:text="Batalkan"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/text_16" />

</LinearLayout>