<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".arch.ui.classdetail.material.materialsubject.MaterialSubjectFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMaterialSubjectBlue"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/size_14"
                app:cardCornerRadius="@dimen/size_8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivMaterialSubjectBlue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_subject_blue"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMaterialSubjectBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_20"
                        android:text="Matematika"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_20"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivMaterialSubjectBlue"
                        app:layout_constraintLeft_toLeftOf="@+id/ivMaterialSubjectBlue"
                        app:layout_constraintTop_toTopOf="@id/ivMaterialSubjectBlue" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMaterialSubjectGreen"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/size_14"
                app:cardCornerRadius="@dimen/size_8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivMaterialSubjectGreen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_subject_green"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMaterialSubjectGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_20"
                        android:text="Ilmu\nPengetahuan\nAlam"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_20"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivMaterialSubjectGreen"
                        app:layout_constraintLeft_toLeftOf="@+id/ivMaterialSubjectGreen"
                        app:layout_constraintTop_toTopOf="@id/ivMaterialSubjectGreen" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMaterialSubjectRed"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/size_14"
                android:layout_marginBottom="@dimen/size_14"
                app:cardCornerRadius="@dimen/size_8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivMaterialSubjectRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_subject_red"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMaterialSubjectRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_20"
                        android:text="Bahasa Inggris"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_20"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivMaterialSubjectRed"
                        app:layout_constraintLeft_toLeftOf="@+id/ivMaterialSubjectRed"
                        app:layout_constraintTop_toTopOf="@id/ivMaterialSubjectRed" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>